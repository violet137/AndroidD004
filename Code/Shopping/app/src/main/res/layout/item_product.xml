<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llLayout_itemProduct"
    android:layout_width="@dimen/ll_layout_with_125dp"
    android:layout_height="@dimen/ll_layout_height_200dp"
    android:layout_weight="1"
    android:paddingBottom="@dimen/layout_margin_10dp"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <!-- Hình sản phẩm 1 -->
    <ImageView
        android:id="@+id/ivProduct_itemProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_hinh_vertical_margin"
        android:layout_marginLeft="@dimen/item_hinh_margin_left"
        android:layout_marginRight="@dimen/item_hinh_margin_right"
        android:layout_marginTop="@dimen/item_hinh_vertical_margin"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/banner_xu_huong_thoi_trang" />

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/tvName_itemProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:visibility="gone"
        android:maxLines="1"
        android:paddingLeft="@dimen/layout_margin_10dp"
        android:paddingRight="@dimen/layout_margin_10dp"
        android:text="TextView"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold" />

    <!-- Giá -->
    <TextView
        android:id="@+id/tvGia_itemProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gia_vertical_margin"
        android:gravity="center"
        android:text="TextView"
        android:textSize="@dimen/text_size_17dp"
        android:textColor="#ff000000" />

    <!-- List màu -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMau_itemProduct"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_size_15dp"
        android:layout_gravity="center">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
