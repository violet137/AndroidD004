<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_vp_sp_hot"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackgroundFront">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_new_product_text_height"
        android:visibility="gone"
        android:gravity="center"
        android:text="Sản Phẩm Nỗi Bậc"
        android:textColor="@color/cardview_dark_background"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold|italic" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpSanPham_vp_sp_hot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_layout_height_250dp">

    </android.support.v4.view.ViewPager>
</LinearLayout>
