<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/quick_pop_up_so_luong_padding_bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/scrim">
    <!-- Nút trừ số lượng -->
    <ImageView
        android:id="@+id/btn_tru_so_luong"
        android:layout_width="@dimen/imageView_layout_50dp"
        android:layout_height="@dimen/imageView_layout_50dp"
        app:srcCompat="@android:drawable/btn_minus" />

    <!-- Hiển thị số lượng -->
    <TextView
        android:id="@+id/text_so_luong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="@dimen/text_so_luong_horizontal_margin"
        android:layout_marginRight="@dimen/text_so_luong_horizontal_margin"
        android:text="1"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:textStyle="bold"/>

    <!-- Nút cộng số lượng -->
    <ImageView
        android:id="@+id/btn_cong_so_luong"
        android:layout_width="@dimen/imageView_layout_50dp"
        android:layout_height="@dimen/imageView_layout_50dp"
        app:srcCompat="@android:drawable/btn_plus" />
    </LinearLayout>
</LinearLayout>