<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <!-- Title -->
    <TextView
        android:id="@+id/title_chi_tiet_set_do"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_do_text_height"
        android:gravity="center|left"
        android:paddingLeft="@dimen/set_do_horizontal_padding"
        android:paddingRight="@dimen/set_do_horizontal_padding"
        android:background="@drawable/shape"
        android:text="@string/xem_san_pham"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <!-- Nút hủy -->
    <ImageButton
        android:id="@+id/thoat_button_chi_tiet_set_do"
        android:layout_width="@dimen/button_thoat_size_set_do"
        android:layout_height="@dimen/button_thoat_size_set_do"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/mr_dialog_close_light"
        android:background="@null"/>

    <!-- List sản phẩm -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_san_pham_chi_tiet_set_do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_chi_tiet_set_do"
        android:paddingTop="@dimen/san_pham_set_do_vertical_padding"
        android:paddingBottom="@dimen/san_pham_set_do_vertical_padding"/>
</RelativeLayout>