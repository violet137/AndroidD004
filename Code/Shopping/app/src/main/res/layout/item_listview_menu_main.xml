<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_vf_menu_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/layout_margin_8dp"
        android:visibility="gone">

        <ViewFlipper
            android:id="@+id/vf_menu_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewFlipper_height">

        </ViewFlipper>
    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constrainLayout_menu_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivMenuType_menu_main"
            android:layout_width="0dp"
            android:layout_height="@dimen/imageView_constrain_height"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@null" />

        <TextView
            android:id="@+id/tvName_menu_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textView_layout_marginTop"
            android:background="@android:color/background_light"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/textView_paddingLeft"
            android:paddingRight="@dimen/textView_paddingRight"
            android:text="Text View"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:textSize="@dimen/textView_textSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linear_ivFashion_menu_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/diviver_ivFashion_menu_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnDiviver_layout_height"
            android:layout_weight="1"
            android:background="#ffffff"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivFashion_menu_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageView_height"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_ivMagazine_menu_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d0000000"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_tvMagazine_menu_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="@dimen/layout_margin_20dp"
            android:paddingTop="@dimen/layout_40dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_10dp"
                android:gravity="center"
                android:text="Tạp Chí F&amp;L"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/text_size_40dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ll_layout_padding_5dp"
                android:gravity="center"
                android:text="Thế Giới Của Cảm Hứng"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/text_size_17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMagazine_menu_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_margin_20dp"
                android:background="@color/cardview_light_background"
                android:paddingLeft="@dimen/textView_pandding_left_15dp"
                android:paddingRight="@dimen/textView_pandding_left_15dp"
                android:text="Đọc Các bài Khác"
                android:textSize="@dimen/text_size_12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMagazine_menu_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageView_height"
            android:layout_marginBottom="@dimen/layout_margin_10dp"
            android:layout_marginLeft="@dimen/layout_margin_20dp"
            android:layout_marginRight="@dimen/layout_margin_20dp"
            android:layout_marginTop="@dimen/layout_margin_10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@null" />

        <TextView
            android:id="@+id/tvLoai_tvMagazine_menu_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_12dp"
            android:textColor="@color/cardview_light_background"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvName_tvMagazine_menu_main"
            android:gravity="center"
            android:textSize="@dimen/layout_margin_20dp"
            android:textColor="@color/cardview_light_background"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>
