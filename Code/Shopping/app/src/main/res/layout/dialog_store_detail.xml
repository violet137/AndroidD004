<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin_10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPhoto_dialog_StoreDeatil"
                android:layout_width="360dp"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/banner_test2" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:isIndicator="true"
                android:numStars="4"
                android:rating="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_object"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName_dialog_StoreDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/text_size_20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDiaChi_dialog_StoreDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:scrollbars="horizontal"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/text_size_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_object"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Opening_Hours"
                    android:textSize="@dimen/text_size_15dp" />

                <TextView
                    android:id="@+id/tvOpeningHours_dialog_StoreDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/text_size_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_Type_dialog_StoreDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_object"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/In_This_Store_You_Can_Find"
                    android:textSize="@dimen/text_size_15dp" />

                <TextView
                    android:id="@+id/tvProductsType_dialog_StoreDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/text_size_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_object"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnDirection_dialog_StoreDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_dark_background"
                    android:drawableLeft="@drawable/cast_ic_expanded_controller_closed_caption"
                    android:text="@string/Directions"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/btnPhone_dialog_StoreDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_object"
                    android:background="@color/cardview_dark_background"
                    android:text="@string/Phone_Number"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
