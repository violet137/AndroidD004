<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp">


    <ImageView
        android:id="@+id/ivIcon_item_slide_menu"
        android:layout_width="@dimen/width_height_imageView"
        android:layout_height="@dimen/width_height_imageView"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvName_item_slide_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/textView_layout_margin_left"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#ff000000" />
</LinearLayout>
