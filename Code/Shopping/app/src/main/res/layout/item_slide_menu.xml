<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon_item_slide_menu"
            android:layout_width="@dimen/imageView_width_height"
            android:layout_height="@dimen/imageView_width_height"
            android:layout_marginLeft="@dimen/imageView_layout_margin_left"
            android:padding="@dimen/imageView_padding_10dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvName_item_slide_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/textView_layout_margin_left"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#ff000000"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDivider_item_slide_menu"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#3c494949"
        android:visibility="gone" />
</LinearLayout>
