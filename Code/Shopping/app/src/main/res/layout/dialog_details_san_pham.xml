<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.com.greenacademy.shopping.Fragment.Main.SanPham.DetailsSanPhamFragment">

    <!-- Nút hủy -->
    <ImageView
        android:id="@+id/thoat_button_chi_tiet_set_do"
        android:layout_width="@dimen/button_thoat_size_set_do"
        android:layout_height="@dimen/button_thoat_size_set_do"
        android:layout_gravity="end"
        app:srcCompat="@drawable/mr_dialog_close_light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_san_pham"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_description_san_pham"/>
    </LinearLayout>
</LinearLayout>
