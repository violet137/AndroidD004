<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="vn.com.greenacademy.shopping.Fragment.Main.SanPham.DetailsSanPhamFragment">

    <!-- Nút hủy -->
    <ImageView
        android:id="@+id/thoat_button_chi_tiet_san_pham"
        android:layout_width="@dimen/button_thoat_size_san_pham"
        android:layout_height="@dimen/button_thoat_size_san_pham"
        android:layout_gravity="end"
        android:layout_margin="@dimen/button_image_margin"
        app:srcCompat="@drawable/ic_cancel"
        android:background="@drawable/shape_button_scrim"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/chi_tiet_san_pham_horizontal_padding"
        android:paddingRight="@dimen/chi_tiet_san_pham_horizontal_padding"
        android:orientation="vertical">
        <!-- Title description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_vertical_margin"
            android:text="@string/description_san_pham"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_description_san_pham"
            android:textStyle="bold"/>
        <!-- Content description -->
        <TextView
            android:id="@+id/description_text_chi_tiet_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_vertical_margin"
            android:text="Test description"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_description_san_pham"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@android:color/darker_gray"/>

        <!-- Title chi tiết -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_vertical_margin"
            android:text="@string/details"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_description_san_pham"
            android:textStyle="bold"/>
        <!-- Content chi tiết -->
        <TextView
            android:id="@+id/details_text_chi_tiet_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test chi tiết"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_description_san_pham"/>
    </LinearLayout>
</LinearLayout>
