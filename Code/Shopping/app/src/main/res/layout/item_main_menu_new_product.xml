<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_iv_fashion"
    android:background="@drawable/shape_khung_thin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/san_pham_moi_padding_bottom">

    <!-- Title -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_new_product_text_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Sản Phẩm Mới"
        android:textColor="@color/cardview_dark_background"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold|italic" />

    <!-- List sản phẩm -->
    <android.support.v4.view.ViewPager
        android:id="@+id/vpNewProduct_item_main_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_pager_san_pham_moi"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

</LinearLayout>
