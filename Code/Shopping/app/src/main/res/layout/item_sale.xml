<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ll_layout_padding_5dp"
    android:background="#96f4f4f4"
    android:orientation="vertical"
    android:padding="@dimen/ll_layout_padding_5dp">

    <ImageView
        android:id="@+id/iv_itemSale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_layout_height_280dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/banner_test2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_itemSale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vp_layout_height_150dp">

    </android.support.v4.view.ViewPager>


</LinearLayout>
