<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_xu_huong_thoi_trang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:context="vn.com.greenacademy.shopping.Fragment.Main.XuHuongThoiTrang.XuHuongThoiTrangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hình đại diện -->
        <ImageView
            android:id="@+id/head_image_fragment_xu_huong_thoi_trang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/xu_huong_thoi_trang_vertical_margin"/>

        <!-- Video -->
        <VideoView
            android:id="@+id/head_video_fragment_xu_huong_thoi_trang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/xu_huong_thoi_trang_vertical_margin"/>

        <!-- List set đồ -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_set_do_fragment_xu_huong_thoi_trang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/xu_huong_thoi_trang_vertical_margin"
            android:background="@color/colorPrimary"/>

        <!-- List sản phẩm -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_san_pham_fragment_xu_huong_thoi_trang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xu_huong_thoi_trang_vertical_margin"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</ScrollView>
