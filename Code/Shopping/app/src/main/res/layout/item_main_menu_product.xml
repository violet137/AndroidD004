<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/ivProduct_item_main_menu"
        android:layout_width="0dp"
        android:layout_height="@dimen/imageView_constrain_height"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvNameProduct_item_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textView_layout_marginTop"
        android:background="@android:color/background_light"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="@dimen/textView_paddingLeft"
        android:paddingRight="@dimen/textView_paddingRight"
        android:text="Text View"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintBottom_toBottomOf="@+id/ivMenuType_menu_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
