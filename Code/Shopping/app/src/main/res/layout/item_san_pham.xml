<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_san_pham"
    android:orientation="vertical"
    android:layout_width="@dimen/item_list_san_pham_width"
    android:layout_height="@dimen/item_list_san_pham_height">

    <!-- Hình sản phẩm -->
    <ImageView
        android:id="@+id/san_pham_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_list_san_pham_image_height"
        app:srcCompat="@drawable/banner_test2"
        android:scaleType="fitXY"/>

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/ten_san_pham_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/item_list_san_pham_margin"
        android:text="Cotton Canvas Cushion Cover Set"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:textColor="@color/colorTextDark"
        android:maxLines="2"/>

    <!-- Giá -->
    <TextView
        android:id="@+id/gia_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/item_list_san_pham_margin"
        android:text="$59.99"
        android:textColor="@color/colorTextDark"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:srcCompat="@drawable/red" />


</LinearLayout>