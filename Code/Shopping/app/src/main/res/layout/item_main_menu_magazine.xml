<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/btnDiviver_1px"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/magazine_vertical_padding"
    android:background="#d6000000"
    android:orientation="vertical"
    android:paddingLeft="@dimen/magazine_horizontal_padding"
    android:paddingRight="@dimen/magazine_horizontal_padding">

    <!-- Khung viền  -->
    <LinearLayout
        android:id="@+id/llMagazine_item_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="@dimen/magazine_vertical_padding"
        android:paddingLeft="@dimen/magazine_horizontal_padding"
        android:paddingRight="@dimen/magazine_horizontal_padding">

        <!-- Title -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_10dp"
            android:gravity="center"
            android:text="TẠP CHÍ F&amp;L"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/magazine_title_text_size"
            android:textStyle="italic"
            android:typeface="serif" />

        <!-- Description -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magazine_title_description_margin_top"
            android:gravity="center"
            android:text="THẾ GIỚI CỦA CẢM HỨNG"
            android:textColor="@color/colorBackground"
            android:textSize="@dimen/magazine_title_description_size"
            android:typeface="sans"/>

        <!-- Button more -->
        <Button
            android:id="@+id/btnMagazine_item_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_bai_viet_khac_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/magazine_button_bai_viet_khac_margin_top"
            android:layout_marginBottom="@dimen/magazine_button_bai_viet_khac_margin_bottom"
            android:background="@color/cardview_light_background"
            android:paddingLeft="@dimen/textView_pandding_left_15dp"
            android:paddingRight="@dimen/textView_pandding_left_15dp"
            android:text="Đọc các bài khác"
            android:textSize="@dimen/text_size_12dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Hình bài viết -->
    <ImageView
        android:id="@+id/ivMagazine_item_main_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/magazine_hinh_bai_viet_home"
        android:layout_marginBottom="@dimen/layout_margin_10dp"
        android:layout_marginTop="@dimen/magazine_hinh_bai_viet_margin_top"
        android:scaleType="centerCrop" />

    <!-- Tác giả -->
    <TextView
        android:id="@+id/tvTypeMagazine_item_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_12dp"
        android:textColor="@color/cardview_light_background"
        android:text="TextView" />

    <!-- Description bài viết -->
    <TextView
        android:id="@+id/tvNameMagzine_item_main_menu"
        android:gravity="center"
        android:textSize="@dimen/text_size_20dp"
        android:maxLines="2"
        android:paddingLeft="@dimen/layout_margin_20dp"
        android:paddingRight="@dimen/layout_margin_20dp"
        android:textColor="@color/cardview_light_background"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="TextView" />
</LinearLayout>
