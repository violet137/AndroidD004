<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/btnDiviver_1px"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/textView_pandding_left_15dp"
    android:background="#d0000000"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llMagazine_item_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="@dimen/layout_margin_20dp"
        android:paddingTop="@dimen/layout_40dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_10dp"
            android:gravity="center"
            android:text="Tạp Chí F&amp;L"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/text_size_40dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ll_layout_padding_5dp"
            android:gravity="center"
            android:text="Thế Giới Của Cảm Hứng"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/text_size_17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMagazine_item_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_margin_20dp"
            android:background="@color/cardview_light_background"
            android:paddingLeft="@dimen/textView_pandding_left_15dp"
            android:paddingRight="@dimen/textView_pandding_left_15dp"
            android:text="Đọc Các bài Khác"
            android:textSize="@dimen/text_size_12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMagazine_item_main_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageView_height"
        android:layout_marginBottom="@dimen/layout_margin_10dp"
        android:layout_marginLeft="@dimen/layout_margin_20dp"
        android:layout_marginRight="@dimen/layout_margin_20dp"
        android:layout_marginTop="@dimen/layout_margin_10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvTypeMagazine_item_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_12dp"
        android:textColor="@color/cardview_light_background"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvNameMagzine_item_main_menu"
        android:gravity="center"
        android:textSize="@dimen/text_size_20dp"
        android:maxLines="2"
        android:paddingLeft="@dimen/layout_margin_20dp"
        android:paddingRight="@dimen/layout_margin_20dp"
        android:textColor="@color/cardview_light_background"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="TextView" />
</LinearLayout>
