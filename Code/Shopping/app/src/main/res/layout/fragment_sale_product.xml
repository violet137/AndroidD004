<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vp_layout_height_150dp"
    tools:context="vn.com.greenacademy.shopping.Fragment.Sale.SaleProductFragmentViewPager">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll1_SaleProduct_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_Sale_product_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/ll_layout_padding_5dp"
                android:layout_marginLeft="@dimen/tv_padding_top_2dp"
                android:layout_marginRight="@dimen/tv_padding_top_2dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/banner_test2" />

            <TextView
                android:id="@+id/tvGia_Sale_product_fragment"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff00"
                android:paddingLeft="@dimen/ll_layout_padding_5dp"
                android:paddingRight="@dimen/ll_layout_padding_5dp"
                android:maxLines="1"
                android:text="100,000,0000,000" />

            <TextView
                android:id="@+id/tvNewProduct_Sale_product_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/tv_padding_top_2dp"
                android:text="@string/San_Pham_Moi"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_size_10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMau_Sale_product_fragment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_size_15dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2_SaleProduct_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv2_Sale_product_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/tv_padding_top_2dp"
                android:layout_marginRight="@dimen/tv_padding_top_2dp"
                android:layout_marginTop="@dimen/ll_layout_padding_5dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/banner_test2" />

            <TextView
                android:id="@+id/tvGia2_Sale_product_fragment"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff00"
                android:paddingLeft="@dimen/ll_layout_padding_5dp"
                android:paddingRight="@dimen/ll_layout_padding_5dp"
                android:maxLines="1"
                android:text="100,000,0000,000" />

            <TextView
                android:id="@+id/tvNewProduct2_Sale_product_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/tv_padding_top_2dp"
                android:text="@string/San_Pham_Moi"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_size_10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMau2_Sale_product_fragment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_size_15dp"
                android:layout_gravity="center"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3_SaleProduct_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv3_Sale_product_fragment"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/ll_layout_padding_5dp"
                android:layout_marginLeft="@dimen/tv_padding_top_2dp"
                android:layout_marginRight="@dimen/tv_padding_top_2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/banner_test2" />

            <TextView
                android:id="@+id/tvGia3_Sale_product_fragment"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff00"
                android:paddingLeft="@dimen/ll_layout_padding_5dp"
                android:paddingRight="@dimen/ll_layout_padding_5dp"
                android:maxLines="1"
                android:text="100,000,0000,000" />

            <TextView
                android:id="@+id/tvNewProduct3_Sale_product_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/tv_padding_top_2dp"
                android:text="@string/San_Pham_Moi"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_size_10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMau3_Sale_product_fragment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_size_15dp"
                android:layout_gravity="center"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4_SaleProduct_fragment"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_marginLeft="@dimen/tv_padding_top_2dp"
                android:layout_marginRight="@dimen/tv_padding_top_2dp"
                android:layout_marginTop="@dimen/ll_layout_padding_5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView15"
                    android:background="@color/cardview_light_background"
                    android:layout_margin="@dimen/btnDiviver_1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_80dp"
                    android:text="+" />
            </FrameLayout>

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:textColor="#ff00"
                android:paddingLeft="@dimen/ll_layout_padding_5dp"
                android:paddingRight="@dimen/ll_layout_padding_5dp"
                android:maxLines="1"
                android:text="100,000,0000,000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:gravity="center"
                android:paddingTop="@dimen/tv_padding_top_2dp"
                android:text="@string/San_Pham_Moi"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_size_10dp" />

            <android.support.v7.widget.RecyclerView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_size_15dp"
                android:layout_gravity="center"  />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
